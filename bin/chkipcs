#!/bin/ksh

# Report on ipc limits and utilization
#

OS=`uname`
INTRADO="/opt/intrado"

if [[ $OS = "Linux" ]]
then
 UARRY=`ipcs -u | grep -E 'used arrays' | awk -F= '{print $2}'`
 USEMS=ipcs -u | grep -E 'allocated semaphores' | awk -F= '{print $2}'`
 MARRY=`ipcs -l | grep -E 'number of arrays' | awk -F= '{print $2}'`
 MSEMS=`ipcs -l | grep -E 'semaphores per array' | awk -F= '{print $2}'`

 echo "$UARRY $USEMS $MARRY $MSEMS"

fi

exit 0

