#!/bin/ksh

MD5BIN="/usr/bin/md5sum"
FILES="/opt/OV/lib/libOvConf.so /opt/OV/lib64/libOvConf.so /opt/OV/lbin/conf/ovconfd"
OS=`uname`

echo $OS

if [[ $OS = "SunOS" ]]
 then
  MD5BIN="/usr/bin/cksum"
  #MD5BIN="/usr/local/bin/md5"
  FILES="/opt/OV/lib/libOvConf.so /opt/OV/lbin/conf/ovconfd"
elif [[ $OS = "HP-UX" ]]
 then
  MD5BIN="/usr/bin/cksum" 
  FILES="/opt/OV/lib/hpux32/libOvConf.so /opt/OV/lbin/conf/ovconfd"
fi

if [[ -d /opt/OV ]]
 then
   if [[ -f /var/tmp/ovmd5.sum ]]
    then
      rm /var/tmp/ovmd5.sum
   fi

   for FILE in $FILES
    do
      $MD5BIN $FILE >> /var/tmp/ovmd5.sum
   done
else
 echo "NOOV" >> /var/tmp/ovmd5.sum
fi
