#!/bin/ksh

INTRADO=/opt/intrado
LOG=$INTRADO/log/leap.second.log

if [[ ! -d $INTRADO/log ]]
then
  mkdir -p $INTRADO/log
fi

echo "Starting leap second futex date mitigation" >> $LOG
/bin/date >> $LOG

/bin/date `date +'%m%d%H%M%C%y.%S'` >> $LOG

echo "Leap second futex date mitigation complete" >> $LOG
/bin/date >> $LOG

