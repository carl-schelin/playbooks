#!/bin/ksh

# gethistory
# Carl Schelin
# Update the GECOS field for users with accurate information.

#BASENAME=$(basename "${0}")
DIRNAME=$(dirname "${0}")

if [[ ! -f ${DIRNAME}/../.config ]]
then
  echo "Unable to locate ${DIRNAME}/../.config. Exiting."
  exit 1
fi

# Source the configuration file
. "${DIRNAME}"/../.config

if [[ -f /bin/yum ]]
then

  if [[ ! -d ${SCRIPTS_VAR}/history ]]
  then
    mkdir ${SCRIPTS_VAR}/history
  fi

  for i in `/bin/yum history list all | egrep -v "^(Loaded plugins|ID|history list|Uploading Enabled|----------|:)" | awk '{print $1}'`
  do
    if [[ $i != ':' ]]
    then
      /bin/yum history info $i > ${SCRIPTS_VAR}/history/$i.output
    fi
  done
fi

