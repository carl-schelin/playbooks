#!/bin/ksh

# Get the Openview configuration

BASENAME=`basename $0`
DIRNAME=`dirname $0`

if [[ ! -f ${DIRNAME}/../.config ]]
then
  echo "Unable to locate ${DIRNAME}/../.config. Exiting."
  exit 1
fi

# Source the configuration file
. ${DIRNAME}/../.config


# need to be root:
RUNBY=`/usr/bin/id -u`
if [[ ! $RUNBY -eq 0 ]]
then
  echo "This script must be run by root."
  exit 0
fi

if [[ -f ${SCRIPTS}/etc/getovconf.output ]]
then
  rm ${SCRIPTS}/etc/getovconf.output
fi

if [[ -f /opt/OV/bin/ovconfget ]]
then
  /opt/OV/bin/ovconfget > ${SCRIPTS}/etc/getovconf.output
fi

