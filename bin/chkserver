PROGNAME="chkserver"
HOSTNAME=`hostname|cut -f1 -d.`
COUNT=0
GATEWAY=''
GWFLAG='no'
GWMSG=''
OS=`uname`
GREEN="\033[32m"
RED="\033[31m"
YELLOW="\033[33m"
RESET="\033[0m"
INTRADO=/opt/intrado
LOG=$INTRADO/etc/chkserver.output
SEVEN=$(( 86400 * 7 ))
PATH=/bin:/usr/bin:/sbin:/usr/sbin:/opt/csw/bin; export PATH
