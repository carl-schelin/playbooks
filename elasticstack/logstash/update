#!/bin/bash

# Carl Schelin
# update:
# Install the logstash tools for the Elastic Stack servers

function usage() {
  echo "Usage:"
  echo "elastic -eht [tag]"
  echo "where:"
  echo " -h help"
  echo " -e enable check - Enable --check to validate task"
  echo " -t tag to use"
}

if [[ $(id -u) -ne 5000 ]]
then
  echo "Error: This script can only be run by the unixsvc account"
  echo ""
  exit 1
fi

if [[ -z $1 ]]
then
  usage
  exit 0
fi

HOSTS="/usr/local/admin/etc/hosts"
OPTCHECK=''
OPTTAG=''
while getopts "eht:" arg
do
  case $arg in
    e) OPTCHECK="--check"
       ;;
    t) OPTTAG="${OPTARG}"
       ;;
    h) usage
       exit 0
       ;;
  esac
done

# remove *.retry files
if [[ -f *.retry ]]
then
  rm *.retry
fi

if [[ -z ${OPTTAG} ]]
then
  echo "Error: No configured site: ${OPTTAG}"
  echo ""
  usage
  exit 1
fi

if [[ ! -f ${HOSTS} ]]
then
  echo "Error: No ${HOSTS} file. Are you on the right server?"
  echo ""
  exit 1
fi

if [[ ! -z ${OPTCHECK} ]]
then
  echo "Validation enabled. No changes will be made to the systems."
fi

echo "Update Logstash Node"
ansible-playbook -i ${HOSTS} ${OPTCHECK} -e site=${OPTTAG} logstash.yaml

